modules = ["nodejs-20", "java-graalvm22.3", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 40017
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd targeteer && java -jar target/targeteer-0.0.1-SNAPSHOT.jar & cd ../frontend && npx vite preview --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd targeteer && mvn clean package -DskipTests && cd ../frontend && npm install && npm run build"]
